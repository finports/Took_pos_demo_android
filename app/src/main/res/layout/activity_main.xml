<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainactivity_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOOK POS"
        android:textSize="70px"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_marginTop="20dp"
        android:id="@+id/mainactivity_framelayout_product1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/background_shape"
        app:layout_constraintTop_toBottomOf="@+id/mainactivity_textview_title"
        tools:layout_editor_absoluteX="-83dp">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:src="@drawable/seolhwasu_skincover" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설화수"
            android:textSize="50px" />

        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설화수 예서스킨커버 21호 은은한 색 SPF25 PA++" />

        <TextView
            android:layout_marginLeft="180dp"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50,454원 ($42)" />

        <Button
            android:id="@+id/plusProduct"
            android:background="#00ff0000"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="27dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"/>

        <Button
            android:id="@+id/minusProduct"
            android:background="#00ff0000"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="60dp"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:text="-"/>

    </FrameLayout>

    <FrameLayout
        android:layout_marginTop="5dp"
        android:id="@+id/mainactivity_framelayout_product2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toBottomOf="@+id/mainactivity_framelayout_product1"
        android:background="@drawable/background_shape">

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/seolhwasu_mask" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginLeft="140dp"
            android:textSize="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설화수"/>

        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설화수 전설 마스크 80ml"/>

        <TextView
            android:layout_marginLeft="180dp"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="177,792원 ($148)" />

        <Button
            android:background="#00ff0000"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="27dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"/>

        <Button
            android:background="#00ff0000"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="60dp"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:text="-"/>

    </FrameLayout>

    <TextView
        android:id="@+id/purchas_list"
        android:layout_marginTop="360dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매상품 내역"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/purchas_list"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/purchas_list"
        />

    <View
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:background="@drawable/dotted_line_horizontal"
        android:layerType="software"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/dottedLine"
        app:layout_constraintTop_toBottomOf="@id/recycler_view"
        app:layout_constraintBottom_toTopOf="@+id/wrapper"
        android:layerType="software"
        android:background="@drawable/dotted_line_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/wrapper"
        app:layout_constraintTop_toBottomOf="@+id/dottedLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <TextView
            android:layout_marginLeft="72dp"
            android:textSize="15dp"
            android:text="합계"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textSize="15dp"
            android:text="634,284원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="130dp"
            />

    </LinearLayout>

    <View
        android:id="@+id/wrapperBelowLine"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/payment"
        android:textSize="17dp"
        android:text="결제수단"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrapperBelowLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/payment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#50bcdf">

        <TextView
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="신용카드"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:layout_marginLeft="60dp"
            android:text="현금"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:text="TOOK"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>